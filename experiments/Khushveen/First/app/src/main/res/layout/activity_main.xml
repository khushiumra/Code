<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="@color/black">

    <TextView
        android:id="@+id/registration_text"
        android:layout_width="409dp"
        android:layout_height="57dp"
        android:background="#490E0E"
        android:gravity="center_vertical"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/registration_submit_button"
        android:layout_width="152dp"
        android:layout_height="57dp"
        android:layout_marginBottom="28dp"
        android:text="Submit"
        android:background="#490E0E"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/registration_layout"
        android:layout_width="365dp"
        android:layout_height="500dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.413"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registration_text">

        <TextView
            android:id="@+id/registration_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#F00"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/username_layout"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registration_username_text"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:background="#490E0E"
                android:gravity="center"
                android:text="Username:"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/registration_username_input"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="username"
                android:inputType="textPersonName"
                android:text=""
                android:textColorHint="#616161" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/email_layout"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registration_email_text"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:background="#490E0E"
                android:gravity="center"
                android:text="Email:"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/registration_email_input"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:textColorHint="#616161" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_email_layout"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registration_confirm_email_text"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#490E0E"
                android:gravity="center"
                android:text="Confirm Email:"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/registration_confirm_email_input"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:ems="10"
                android:hint="example@gmail.com"
                android:inputType="textEmailAddress"
                android:textColorHint="#616161" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/password_layout"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registration_password_text"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:background="#490E0E"
                android:gravity="center"
                android:text="Password:"
                android:textColor="@color/white"
                android:textSize="13sp" />


            <EditText
                android:id="@+id/registration_password_input"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="*****"
                android:inputType="textPassword"
                android:textColorHint="#616161" />
        </LinearLayout>

        <TextView
            android:id="@+id/registration_password_requirements"
            android:layout_width="265dp"
            android:layout_height="wrap_content"
            android:text="Password requirements:\nAt least 8 characters,\nAt least number,\nA capital letter,\nA lowercase letter"
            android:textColor="@color/white"
            android:textSize="11sp" />


        <LinearLayout
            android:id="@+id/confirm_password_layout"
            android:layout_width="365dp"
            android:layout_height="49dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/registration_confirm_password_text"
                android:layout_width="115dp"
                android:layout_height="48dp"
                android:background="#490E0E"
                android:gravity="center"
                android:text="Confirm Password:"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/registration_confirm_password_input"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:background="@color/white"
                android:ems="10"
                android:hint="*****"
                android:inputType="textPassword"
                android:textColorHint="#616161" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>