<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <Button
        android:id="@+id/appointmentDash"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:text="@string/appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.887"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notesButton" />

    <TextView
        android:id="@+id/dashboard_text"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#490E0E"
        android:gravity="center"
        android:text="Dashboard"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/assignmentButton"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="56dp"
        android:text="Assignments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_text" />

    <Button
        android:id="@+id/calendarButton"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="Calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/assignmentButton" />

    <Button
        android:id="@+id/chatroom"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="220dp"
        android:text="Chatroom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.429"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dashboard_text"
        app:layout_constraintVertical_bias="0.649" />

    <Button
        android:id="@+id/notesButton"
        android:layout_width="153dp"
        android:layout_height="100dp"
        android:layout_marginTop="56dp"
        android:text="Notes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toEndOf="@+id/assignmentButton"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_text" />

</androidx.constraintlayout.widget.ConstraintLayout>